rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    // IMPORTANT: Update the email below to match your VITE_ADMIN_EMAIL from .env
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'admin@foodieshub.com';
    }

    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Users collection
    match /users/{userId} {
      // Admin has full access
      allow read, write: if isAdmin();
      
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own data (except approval fields)
      allow update: if request.auth != null && 
                     request.auth.uid == userId &&
                     !('sellerApproved' in request.resource.data.diff(resource.data).affectedKeys()) &&
                     !('riderApproved' in request.resource.data.diff(resource.data).affectedKeys());
      
      // Users can create their own document on signup
      allow create: if request.auth != null && 
                     request.auth.uid == userId;
    }

    // Stores collection
    match /stores/{storeId} {
      // Admin has full access
      allow read, write: if isAdmin();
      
      // Anyone can read active stores
      allow read: if resource.data.isActive == true;
      
      // Sellers can create one store
      allow create: if request.auth != null && 
                     request.resource.data.sellerId == request.auth.uid;
      
      // Sellers can update/delete their own store
      allow update, delete: if request.auth != null && 
                              resource.data.sellerId == request.auth.uid;
    }

    // Food items collection
    match /foodItems/{foodId} {
      // Admin has full access
      allow read, write: if isAdmin();
      
      // Anyone can read food items from active stores
      allow read: if true;
      
      // Sellers can create food items for their store
      allow create: if request.auth != null && 
                     exists(/databases/$(database)/documents/stores/$(request.resource.data.storeId)) &&
                     get(/databases/$(database)/documents/stores/$(request.resource.data.storeId)).data.sellerId == request.auth.uid;
      
      // Sellers can update/delete food items from their store
      allow update, delete: if request.auth != null && 
                               exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
                               get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.sellerId == request.auth.uid;
    }

    // Orders collection
    match /orders/{orderId} {
      // Admin has full access
      allow read, write: if isAdmin();
      
      // Buyers can read their own orders
      allow read: if request.auth != null && 
                   resource.data.buyerId == request.auth.uid;
      
      // Buyers can create orders
      allow create: if request.auth != null && 
                     request.resource.data.buyerId == request.auth.uid;
      
      // Sellers can read orders for their store
      allow read: if request.auth != null && 
                   exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
                   get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.sellerId == request.auth.uid;
      
      // Sellers can update order status for their store
      allow update: if request.auth != null && 
                     exists(/databases/$(database)/documents/stores/$(resource.data.storeId)) &&
                     get(/databases/$(database)/documents/stores/$(resource.data.storeId)).data.sellerId == request.auth.uid &&
                     // Only allow updating orderStatus field
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['orderStatus', 'updatedAt']);
      
      // Riders can read available orders and their assigned orders
      allow read: if request.auth != null && 
                   (resource.data.riderId == null || resource.data.riderId == request.auth.uid);
      
      // Riders can update orders assigned to them
      allow update: if request.auth != null && 
                     resource.data.riderId == request.auth.uid &&
                     // Only allow updating specific fields
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['orderStatus', 'deliveryOTP', 'deliveredAt', 'updatedAt']);
      
      // Riders can assign themselves to ready orders
      allow update: if request.auth != null && 
                     resource.data.orderStatus == 'ready' &&
                     resource.data.riderId == null &&
                     request.resource.data.riderId == request.auth.uid &&
                     request.resource.data.orderStatus == 'picked_up';
    }

    // Riders collection
    match /riders/{riderId} {
      // Admin has full access
      allow read, write: if isAdmin();
      
      // Riders can read/update their own data
      allow read, update: if request.auth != null && 
                            request.auth.uid == riderId;
      
      // Riders can create their own document
      allow create: if request.auth != null && 
                     request.auth.uid == riderId;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Admin has full access
      allow read, write: if isAdmin();
      
      // Anyone can read reviews
      allow read: if true;
      
      // Buyers can create reviews for their orders
      allow create: if request.auth != null && 
                     request.resource.data.buyerId == request.auth.uid &&
                     exists(/databases/$(database)/documents/orders/$(request.resource.data.orderId)) &&
                     get(/databases/$(database)/documents/orders/$(request.resource.data.orderId)).data.buyerId == request.auth.uid;
      
      // Buyers can update/delete their own reviews
      allow update, delete: if request.auth != null && 
                              resource.data.buyerId == request.auth.uid;
    }
  }
}

